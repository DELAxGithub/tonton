{
  "name": "@tonton/github-issue-processor",
  "version": "1.0.0",
  "description": "GitHub Issue自動処理システム for TonTon iOS App",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "process": "node dist/index.js process",
    "process:once": "node dist/index.js process-once",
    "init": "node dist/init.js",
    "validate": "node dist/validate.js",
    "status": "node dist/status.js",
    "clean": "node dist/clean.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@octokit/rest": "^20.1.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.3",
    "ora": "^8.0.1",
    "simple-git": "^3.24.0",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5"
  },
  "keywords": [
    "github",
    "issues",
    "automation",
    "claude",
    "ios",
    "swift",
    "tonton"
  ],
  "author": "TonTon Development Team",
  "license": "MIT"
}