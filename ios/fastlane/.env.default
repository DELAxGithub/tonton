# Default environment variables for Fastlane
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Apple Developer Account
APPLE_ID=""
FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD=""

# Team IDs
TEAM_ID=""  # Developer Portal Team ID
ITC_TEAM_ID=""  # App Store Connect Team ID

# Match Configuration
MATCH_GIT_URL=""  # Git repository URL for certificates
MATCH_PASSWORD=""  # Password for encrypting certificates

# Keychain (for CI/CD)
KEYCHAIN_NAME="tonton-ios"
KEYCHAIN_PASSWORD=""

# App Store Connect API (optional, but recommended for CI)
APP_STORE_CONNECT_API_KEY_ID=""
APP_STORE_CONNECT_API_ISSUER_ID=""
APP_STORE_CONNECT_API_KEY_CONTENT=""  # Base64 encoded .p8 file content

# Slack Webhook (optional)
SLACK_URL=""

# Build Settings
GYM_OUTPUT_DIRECTORY="./build"
GYM_OUTPUT_NAME="TonTon"

# TestFlight
PILOT_SKIP_WAITING_FOR_BUILD_PROCESSING=true
PILOT_DISTRIBUTE_EXTERNAL=false

# Screenshot Settings (optional)
SNAPSHOT_SIMULATOR_NAME="iPhone 14 Pro"